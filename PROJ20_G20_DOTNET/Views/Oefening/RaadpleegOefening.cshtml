@model PROJ20_G20_DOTNET.Models.Domain.Oefening

@{
    ViewData["Title"] = Model.Titel;
}

<div class="container">
    <h2 class="titleAanwezigheden">@Model.Graad - <strong class="vetKleur">@Model.Thema.Naam</strong></h2>
</div>

<div class="volledigePagina">
    <div class="filmBeschrijvingContainer">
        <div class="oefeningContainer">
            <div class="filmpje">
                <iframe width="560"
                        height="315"
                        src=@Model.UrlVideo
                        frameborder="0"
                        allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen></iframe>
            </div>
            <div class="fBeschrijving">
                <h2 class="fTitel">@Model.Titel</h2>
                <p class="fTekstbeschrijving">@Model.Tekst</p>
            </div>
        </div>
    </div>

    <br />
</div>

