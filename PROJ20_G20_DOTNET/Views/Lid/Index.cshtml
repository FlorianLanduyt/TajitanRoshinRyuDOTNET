<div class="container">
    <h2 class="titleAanwezigheden"><strong class="vetKleur">@Model.Voornaam @Model.Achternaam</strong></h2>
</div>

<div class="indexLid">
    <div class="indexCenter">
        <div class="indexContainer">
            <h4 class="vetKleur" style="padding-bottom:10px;">@Model.Functie - @Model.Graad - @Model.PuntenAantal punten</h4>
            <div class="flexrij">
                <p class="flexItem">Geboortedatum:</p>
                <p class="flexItem">@Model.GeboorteDatum.ToShortDateString()</p>
                <p class="flexItem">Geboorteplaats:</p>
                <p class="flexItem">@Model.GeboortePlaats</p>
                <p class="flexItem">Geslacht:</p>
                <p class="flexItem">@Model.Geslacht</p>
                <p class="flexItem">Nationaliteit:</p>
                <p class="flexItem">@Model.Nationaliteit</p>
                <p class="flexItem">Adres:</p>
                <div class="flexItem">
                    <p class="adresRij">@Model.Straat @Model.HuisNr @(Model.Bus != null ? Model.Bus : "")</p>
                    <p class="adresRij">@Model.PostCode @Model.Stad.ToUpper()</p>
                </div>
                <p class="flexItem">Gsm-nummer:</p>
                <p class="flexItem">@Model.GsmNr</p>
                <p class="flexItem">Telefoon-nummer:</p>
                <p class="flexItem">@Model.VasteTelefoonNr</p>
                <p class="flexItem">E-mail:</p>
                <p class="flexItem">@Model.Email</p>
                <p class="flexItem">E-mail vader:</p>
                <p class="flexItem">@(Model.EmailVader != null ? Model.EmailVader : "   -")</p>
                <p class="flexItem">E-mail moeder:</p>
                <p class="flexItem">@(Model.EmailMoeder != null ? Model.EmailMoeder : " -")</p>
                <p class="flexItem">Beroep:</p>
                <p class="flexItem">@(Model.Beroep != null ? Model.Beroep : "    -")</p>

            </div>

        </div>

    </div>
    <div class="indexCenter">
        <form>
            <button asp-action="Edit" asp-route-id="@Model.Id" class="wijzigenKnop">Wijzigen</button>
        </form>
    </div>
</div>




