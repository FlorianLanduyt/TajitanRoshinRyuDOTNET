    <div class="aanwezighedencontainer">
        <div class="aanwezighedenWrap">
            <form method="post">
                <div class="volledigeForm">
                    <div class="body">
                        <div class="wrapper">
                            <input class="search" type="text" name="Naam" id="Naam" value="@ViewBag.Naam" />
                            <button class="submit" type="submit" asp-action="Aanwezigheden">Zoek</button>
                        </div>
                    </div>
                </div>
            </form>
            <div class="row-flex">
                @foreach (var ActiviteitInschrijving in Model.ActiviteitInschrijvingen) {
                    @if (!ActiviteitInschrijving.IsAanwezig) {
                        <form method="post" class="aanwezigFalse aanwezigKaart">
                            @*<div>
                                    <a onclick="document.getElementById('myform').id.submit();">
                                        <img class="foto" src="~/images/@(@ActiviteitInschrijving.Inschrijving.Lid.Geslacht.ToString()).png" />
