<div>
    <button onclick="toggleShow()">Voeg een gast toe</button>
</div>
<div id="voegGastToe">
    <form method="post" asp-action="VoegGastToe" asp-route-id="@Model.Id">
        <label for="Voornaam" class="control-label">Voornaam</label>
        <input type="text" name="Voornaam" id="Voornaam" />

