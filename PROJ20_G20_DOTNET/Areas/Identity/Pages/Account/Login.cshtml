@page
@model LoginModel

@{
    ViewData["Title"] = "Aanmelden";
}

@*<h2>@ViewData["Title"]</h2>*@
<div class="loginPagina">
    <div class="loginContainer">
        <div class="loginVlak">
            <form class="loginForm" method="post">
                <span class="loginTitel">Welkom <strong class="vetKleur">Taijitan Yoshin Ryu!</strong></span>
                <div class="form-group">
                    <label asp-for="Input.Email" class="loginLabel"></label>
                    <input asp-for="Input.Email" class="loginInput" />
                    <span asp-validation-for="Input.Email" class="text-danger validatie"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" class="loginLabel"></label>
                    <input asp-for="Input.Password" class="loginInput" />
                    <span asp-validation-for="Input.Password" class="text-danger validatie"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="loginLabel">
                            <input asp-for="Input.RememberMe" class="loginCheckbox validatie" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group knopContainer">
                    <button type="submit" class="loginButton">Meld aan</button>
                </div>
            </form>
        </div>
    </div>
</div>




